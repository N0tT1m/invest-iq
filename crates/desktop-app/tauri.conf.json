{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InvestIQ",
  "version": "1.0.0",
  "identifier": "com.investiq.desktop",
  "build": {
    "devUrl": "http://localhost:8050",
    "frontendDist": "../desktop-frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "InvestIQ - Stock Analysis Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "InvestIQ"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
