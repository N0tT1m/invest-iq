{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InvestIQ",
  "version": "1.0.0",
  "identifier": "com.investiq.desktop",
  "build": {
    "devUrl": "http://localhost:1420",
    "frontendDist": "../desktop-frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "InvestIQ - Stock Analysis Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "InvestIQ"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "hardenedRuntime": true,
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ0NzYxNkYxNzEzRjI5NApSV1NVOGhNWGIyRkhCR3JsdVFXNTdDUi9OeWswR2JCYWtCTnNCRUpPNHZHU1dxZ0I2V25XUW9wYQo=",
      "endpoints": [
        "https://github.com/N0tT1m/invest-iq/releases/latest/download/latest.json"
      ]
    }
  }
}
