# Multi-stage build for InvestIQ Trading Agent

# Stage 1: Build
FROM rust:slim AS builder

RUN apt-get update && \
    apt-get install -y pkg-config libssl-dev && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY Cargo.toml Cargo.lock ./
COPY crates ./crates

RUN cargo build --release --bin trading-agent

# Stage 2: Runtime
FROM debian:bookworm-slim

RUN apt-get update && \
    apt-get install -y ca-certificates libssl3 && \
    rm -rf /var/lib/apt/lists/*

RUN useradd -m -u 1000 investiq && \
    mkdir -p /app /app/data && \
    chown -R investiq:investiq /app

WORKDIR /app

COPY --from=builder /app/target/release/trading-agent ./trading-agent
RUN chown investiq:investiq ./trading-agent

USER investiq

ENV RUST_LOG=info
ENV DATABASE_URL=sqlite:/app/data/portfolio.db

CMD ["./trading-agent"]
