# InvestIQ Autonomous Trading Agent Configuration
# Copy this to .env.trading and customize

# =============================================================================
# TRADING CONTROL
# =============================================================================
TRADING_ENABLED=true                    # Set to false to pause trading
PAPER_TRADING=true                      # TRUE for paper trading, FALSE for real money
SCAN_INTERVAL=300                       # Scan market every N seconds (300 = 5 min)

# =============================================================================
# CONSERVATIVE RISK SETTINGS
# =============================================================================
MAX_RISK_PER_TRADE=2.0                 # Max 2% of account per trade
MAX_POSITION_SIZE=500.0                # Max $500 per position
MAX_PORTFOLIO_RISK=10.0                # Max 10% total portfolio risk
MIN_CONFIDENCE=0.75                    # Min 75% confidence to trade
MIN_WIN_RATE=0.60                      # Min 60% historical win rate required

# =============================================================================
# WATCHLIST (customize with your stocks)
# =============================================================================
WATCHLIST=AAPL,MSFT,GOOGL,AMZN,NVDA,TSLA,META,AMD,NFLX,SPY,QQQ
SCAN_TOP_N=100                         # Also scan top 100 movers

# =============================================================================
# LOCAL AI (Ollama)
# =============================================================================
LLM_ENDPOINT=http://localhost:11434    # Ollama endpoint
LLM_MODEL=llama3.1:70b                 # Model name (70b recommended, 13b for faster)

# =============================================================================
# API KEYS
# =============================================================================

# Polygon.io (Market Data)
POLYGON_API_KEY=your_polygon_key_here

# Alpaca (Broker)
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets   # Paper trading
# ALPACA_BASE_URL=https://api.alpaca.markets       # Real money (USE WITH CAUTION!)

# =============================================================================
# DISCORD NOTIFICATIONS (Optional)
# =============================================================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_PATH=./portfolio.db

# =============================================================================
# ADVANCED SETTINGS (Leave as default unless you know what you're doing)
# =============================================================================

# Strategy Weights (must sum to ~1.0)
# Adjust these after testing to favor strategies that work best for you
# MOMENTUM_WEIGHT=0.40
# MEAN_REVERSION_WEIGHT=0.25
# BREAKOUT_WEIGHT=0.20
# SENTIMENT_WEIGHT=0.10
# HIGH_RISK_WEIGHT=0.05

# Position Management
# TRAILING_STOP_PERCENT=3.0             # Trailing stop at 3% from peak
# TAKE_PROFIT_LADDERING=true            # Sell in increments

# Safety Shutoffs
# MAX_DAILY_LOSS_PERCENT=5.0            # Stop trading if lose 5% in one day
# MAX_CONSECUTIVE_LOSSES=3              # Stop trading after 3 losses in a row
# MARKET_CRASH_THRESHOLD=-5.0           # Stop if SPY drops 5%+ in one day
